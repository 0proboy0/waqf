{% extends './layouts/default.njk' %}

{% block css %}

{% endblock %}

{% block content %}
<div class="container">
    <div class="columns">
        <div class="column mt-6 is-three-quarters is-centered">
            <form class="box is-full">
                <div class="field">
                  <label class="label" for="username">اسم المستخدم</label>
                  <div class="control">
                    <input class="input" type="text" placeholder="" id="username" name="username">
                  </div>
                </div>
              
                <div class="field">
                  <label class="label" for="password">كلمة السر</label>
                  <div class="control">
                    <input class="input" type="password" placeholder="********" id="password" name="password">
                  </div>
                </div>

                <div class="field">
                    <label class="label" for="passwordConfirm">تأكيد كلمة السر</label>
                    <div class="control">
                      <input class="input" type="password" placeholder="********" id="passwordConfirm" name="passwordConfirm">
                    </div>
                  </div>
              
                <button class="button is-primary">تسجيل</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}